import random
import string

def get_valid_length():
    """Get valid password length from the user."""
    while True:
        try:
            length = int(input("ğŸ”¢ Enter desired password length (minimum 6): "))
            if length >= 6:
                return length
            else:
                print("âš ï¸ Password length should be at least 6 characters.")
        except ValueError:
            print("âŒ Please enter a valid number.")

def get_character_set():
    """Ask user what characters to include in password."""
    print("\nâœ… Choose character types to include:")
    include_upper = input("Include UPPERCASE letters? (y/n): ").lower() == 'y'
    include_lower = input("Include lowercase letters? (y/n): ").lower() == 'y'
    include_digits = input("Include digits? (y/n): ").lower() == 'y'
    include_symbols = input("Include special characters? (y/n): ").lower() == 'y'

    character_pool = ''
    if include_upper:
        character_pool += string.ascii_uppercase
    if include_lower:
        character_pool += string.ascii_lowercase
    if include_digits:
        character_pool += string.digits
    if include_symbols:
        character_pool += string.punctuation

    if not character_pool:
        print("âš ï¸ No character type selected! Using all types by default.")
        character_pool = string.ascii_letters + string.digits + string.punctuation

    return character_pool

def generate_password(length, character_pool):
    """Generate a random password based on chosen criteria."""
    return ''.join(random.choice(character_pool) for _ in range(length))

def main():
    print("ğŸ” Welcome to the AI-based Random Password Generator!\n")

    name = input("ğŸ‘¤ What is your name? ")
    print(f"Hi {name}! Let's create a strong password for you.\n")

    length = get_valid_length()
    character_pool = get_character_set()

    password = generate_password(length, character_pool)

    print(f"\nğŸ”‘ Your generated password is: \033[1m{password}\033[0m")
    print("ğŸ“Œ Tip: Store this password securely!")

if __name__ == "__main__":
    main()
